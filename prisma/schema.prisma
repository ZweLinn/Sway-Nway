generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Discussion {
  id        String    @id @default(cuid())
  title     String?   @default("New Discussion")
  createdAt DateTime  @default(now())
  messages  Message[]
  notes     Note[]
}

model Message {
  id           String     @id @default(cuid())
  role         String     // 'user' သို့မဟုတ် 'assistant'
  content      String     @db.Text
  createdAt    DateTime   @default(now())
  discussionId String
  discussion   Discussion @relation(fields: [discussionId], references: [id], onDelete: Cascade)
}

model Note {
  id           String     @id @default(cuid())
  content      String     @db.Text
  createdAt    DateTime   @default(now())
  discussionId String
  discussion   Discussion @relation(fields: [discussionId], references: [id], onDelete: Cascade)
}